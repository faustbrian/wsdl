      <xs:simpleType name="BasePrice">
        <xs:restriction base="xs:decimal"/>
      </xs:simpleType>
      <xs:complexType name="RestrictedPrice">
        <xs:simpleContent>
          <xs:restriction base="tns:BasePrice">
